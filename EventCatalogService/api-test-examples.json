{
  "EventController": {
    "createEvent": {
      "endpoint": "POST /events/create",
      "description": "Create a new event (initial status = DRAFT)",
      "requestBody": {
        "title": "Summer Music Festival 2023",
        "description": "A three-day music festival featuring top artists from around the world",
        "date": "2023-07-15",
        "startTime": "2023-07-15T14:00:00",
        "endTime": "2023-07-17T23:00:00",
        "status": "DRAFT",
        "category": "MUSIC",
        "venueId": 1,
        "artistIds": [1, 2, 3],
        "ticketTypes": [
          {
            "name": "General Admission",
            "price": 150.00,
            "quantity": 5000
          },
          {
            "name": "VIP",
            "price": 300.00,
            "quantity": 500
          }
        ],
        "images": [
          {
            "url": "https://example.com/images/summer-fest-1.jpg"
          },
          {
            "url": "https://example.com/images/summer-fest-2.jpg"
          }
        ]
      }
    },
    "updateEvent": {
      "endpoint": "PUT /events/{id}",
      "description": "Update an existing event (only if owner)",
      "requestBody": {
        "title": "Updated Summer Music Festival 2023",
        "description": "An updated description for the three-day music festival",
        "date": "2023-07-20",
        "startTime": "2023-07-20T15:00:00",
        "endTime": "2023-07-22T23:00:00",
        "status": "PUBLISHED",
        "categoryId": 1,
        "organizerId": 1,
        "venueId": 2
      }
    },
    "updateEventStatus": {
      "endpoint": "PATCH /events/{id}/status",
      "description": "Update event status (DRAFT â†’ PUBLISHED or other)",
      "requestParam": "status=PUBLISHED"
    },
    "deleteEvent": {
      "endpoint": "DELETE /events/{id}",
      "description": "Soft delete an event (only if owner)",
      "noRequestBody": true
    },
    "getEvent": {
      "endpoint": "GET /events/{id}",
      "description": "Get event by ID",
      "noRequestBody": true
    },
    "getAllEvents": {
      "endpoint": "GET /events",
      "description": "Get all non-deleted events",
      "noRequestBody": true
    },
    "getEventsByCategory": {
      "endpoint": "GET /events/category/{category}",
      "description": "Filter events by category",
      "pathVariable": "MUSIC",
      "noRequestBody": true
    },
    "getEventsByStatus": {
      "endpoint": "GET /events/status/{status}",
      "description": "Filter events by status",
      "pathVariable": "PUBLISHED",
      "noRequestBody": true
    },
    "getEventsByOrganizer": {
      "endpoint": "GET /events/organizer/{organizerId}",
      "description": "Filter events by organizer",
      "pathVariable": "1",
      "noRequestBody": true
    },
    "searchEvents": {
      "endpoint": "GET /events/search?keyword=festival",
      "description": "Search events by keyword in title/description",
      "noRequestBody": true
    },
    "getEventsBetweenDates": {
      "endpoint": "GET /events/date?start=2023-07-01&end=2023-07-31",
      "description": "Filter events between two dates",
      "noRequestBody": true
    }
  },
