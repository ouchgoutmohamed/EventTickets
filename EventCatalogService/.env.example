# ==============================================
# EVENT CATALOG SERVICE - ENVIRONMENT VARIABLES EXAMPLE
# ==============================================
# Copiez ce fichier en .env et configurez vos propres valeurs

# Application Configuration
SPRING_APPLICATION_NAME=EventCatalogService
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sibe_db
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Database URL (Constructed from above variables)
DATABASE_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# JPA/Hibernate Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_DIALECT=org.hibernate.dialect.MySQLDialect

# JWT Configuration (Must match User Service & API Gateway)
JWT_SECRET=change_this_secret_in_production
JWT_EXPIRATION=3600000
# JWT_EXPIRATION en millisecondes : 3600000 = 1 heure

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SQL=DEBUG

# SpringDoc/Swagger Configuration
SPRINGDOC_API_DOCS_PATH=/v3/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
SPRINGDOC_SWAGGER_UI_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# Connection Pool Configuration
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000

# API Gateway URL (for inter-service communication)
API_GATEWAY_URL=http://localhost:3000

# Other Microservices URLs
USER_SERVICE_URL=http://localhost:3001
TICKET_INVENTORY_SERVICE_URL=http://localhost:8082
PAYMENT_SERVICE_URL=http://localhost:8083

# Environment
ENVIRONMENT=development
# Values: development, staging, production

# Application Metadata
APP_VERSION=1.0.0
APP_DESCRIPTION=Event Catalog Service - Gestion du catalogue d'événements
